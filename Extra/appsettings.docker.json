{
    "DockerOptions": {
      "DockerHost": "unix:///var/run/docker.sock",
      "DockerfilePath": "/app/Resources/Dockerfile"
    },
    
    "PathOptions": {
      "WorldDirectory": "/data/world",
      "ServerPropertiesDirectory": "/data/properties",
      "ModDirectory": "/data/mods",
      "ImageZipFileDirectory": "/data/imagezipfiles"
    },
    
     "BackgroundServiceOptions": {
      "WorkingLoopSleepInterval": "0.00:02:00",
      "EnableBackgroundWorldProcessing": "True",
      "WorldProcessingInterval": "0.00:05:00"
    },
  
    "TextureOptions": {
      "BlockColorsFilePath": "/app/Resources/blockcolors.json",
      "BiomeColorsFilePath": "/app/Resources/biomecolors.json"
    },
    
    "ServerCommunicationOptions": {
      "QueryIpAddress": "127.0.0.1"
    },
  
    "ConnectionStrings": {
      "MainDatabase": "Filename=/data/database.db"
    },
    
    "RemoteImageOptions": {
      "Enable": "True",
      "RepositoryPath": "http://nyclon.crabdance.com/mineman-images/",
      "RefreshInterval": "0.01:00:00"
    },
  
    
    "Logging": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Information",
        "System": "Information",
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore":  "Warning"
      }
    }
  }